<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="mhel.itu.moapd.bikeshare">

    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />
    <uses-feature android:name="android.hardware.camera" android:required="true" />

    <application
        android:name=".Main"
        android:allowBackup="true"
        android:icon="@drawable/baseline_directions_bike_24"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.BikeShare">
        <activity android:name=".viewmodel.activity.AddBalanceActivity" ></activity>
        <activity android:name=".viewmodel.activity.RideHistoryActivity" />
        <activity android:name=".viewmodel.activity.CheckBikeActivity" />
        <activity android:name=".viewmodel.activity.AddBikeActivity" />
        <activity android:name=".viewmodel.activity.BikeListActivity" />
        <activity android:name=".viewmodel.activity.MainBikeActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>